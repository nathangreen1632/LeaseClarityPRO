{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "baseUrl": ".",                      // ✅ Added
    "paths": {                           // ✅ Added
      "types/*": ["../types/*"]
    }
  },
  "include": ["src", "../types"],
  "exclude": ["node_modules", "dist"]
}
